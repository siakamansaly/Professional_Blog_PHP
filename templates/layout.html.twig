<!DOCTYPE html>
<html lang="fr">

<head>
    <title>{% if head.title %}{{ head.title }} - {%endif %}{{author}}</title>
    {% block head %}
    <meta name="author" content="{{author}}" />
    <meta name="description" content="{{description}}" />
    {% endblock %}
    {% include "/core/head.html.twig" %}
</head>

<body id="page-top" class="index">
    {% block navbar %}{% include "/core/navbar.html.twig" %}{% endblock %}


    {% block content %}{% endblock %}

    <footer class="footer text-center">
        {% block footer %}{% include "/core/footer.html.twig" %}{% endblock %}
    </footer>

    {% include "/core/login.html.twig" %}

    {% include "/core/register.html.twig" %}

    {% include "/core/lostpassword.html.twig" %}

    <div class="scroll-top px-3 py-2 bg-primary rounded">
        <i class="fas fa-chevron-up fa-2x text-secondary"></i>
    </div>

</body>

</html>