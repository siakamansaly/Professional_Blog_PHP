{% macro confirmationModal(name,title,subtitle, class, id_button, option=[]) %}
<!-- delete post-->
<div class="{{name}}-modal modal fade" id="{{name}}" tabindex="-1" aria-labelledby="{{name}}" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal"
                    aria-label="Close"></button></div>
            <div class="modal-body pb-5 mb-5">
                <div class="container">
                    <div class="row">
                        <div class="col-12 ">
                            <div class="card text-primary mb-4">
                                <h5
                                    class="fw-bolder {{option.bgColor | default('text-light bg-danger')}}  py-3 rounded text-center">
                                    {{title}}
                                </h5>

                                <div class="card-body d-flex justify-content-center">
                                    <form method="post">
                                        <div id="alertDeleteConfirmation"></div>
                                        <div class="row mb-4">
                                            <div class="col text-center">
                                                <label>{{subtitle}}</label>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div id="{{option.reponse}}" class="col text-center fw-bold text-uppercase">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col text-center"><button
                                                    class="{{class}} btn btn-{{option.btn | default('danger')}}"
                                                    type="submit" id="{{id_button}}" title="{{title}}"
                                                    value="">Oui</button></div>

                                            <div class="col text-center"><button
                                                    class="btn btn-outline-{{option.btn | default('danger')}}"
                                                    type="button" data-bs-dismiss="modal"
                                                    aria-label="Close">Non</button></div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endmacro %}