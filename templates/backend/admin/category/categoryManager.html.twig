{% import '/macro/form.html.twig' as form %}
{% extends "layout.html.twig" %}
{% block navbar %}{% set urlblog = "/" %} {% set url = "/" %} {{ parent() }}{% endblock
%}
{% block content %}
{% if session.login.userType == 'admin' %}
<header id="adminBlog" class="page-section bg-secondary border-bottom mb-4">
  <div class="container">
    <div class="text-center mt-5">
      <h1 class="fw-bolder text-primary">Administration des catégories</h1>

    </div>
  </div>
</header>

<div class="container my-4 text-primary">

  <div class="mb-4 text-left d-flex justify-content-between">
    <a href="/adminBlog" class="btn btn-outline-secondary text-primary" role="button" rel="noopener"><i
        class="fas fa-angle-double-left"></i> Administration du Blog</a>
        <div><button type="button" class="btn btn-secondary" href="/#categoryAdd" data-bs-toggle="modal"
          data-bs-target="#categoryAdd">Ajouter une catégorie</button></div>
  </div>

  

  <div id="alertComment"></div>
  <div class="table-responsive ">
    <table class="table ">
      <thead>
        <tr class="table-secondary text-primary">
          <th scope="col">#</th>
          <th scope="col">Catégorie</th>
          <th scope="col">Description</th>
          <th scope="col" colspan="2" >Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for category in categories %}
        <tr id="category-{{category.id}}">
          <th scope="row">#{{category.id}}</th>
          <td>{{category.name}}</td>
          <td>{{category.description}}</td>
          
          <td><a href="/categoryManagerEdit/{{category.id}}" type="button" class="btn btn-outline-secondary text-center"
              rel="noopener" title="Modifier cette catégorie"><i class="far fa-edit"
                title="Modifier cette catégorie"></i></a>
          </td>
          <td>

            <!--<button class="formCategoryDelete btn btn-outline-danger" type="submit" value="{{category.id}}"
              title="Supprimer cette catégorie"><i class="far fa-trash-alt" title="Supprimer cette catégorie"></i></button>-->

              <button type="button" class="deleteButton btn btn-outline-danger" href="/#delete" data-bs-toggle="modal" data-bs-target="#delete" data-id="{{category.id}}" data-title="{{category.name}}" value="{{category.id}}" ><i
                class="far fa-trash-alt" title="{{delete.title}}"></i></button>
          </td>
        </tr>
        {% endfor %}

      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-between">


    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <li class="page-item {% if currentPage == 1 %} disabled {% endif %}">
          <a class="page-link" href="/categoryManager?page={{ currentPage - 1 }}"
            tabindex="-1">Précédente</a>
        </li>
        {% for i in 1..AllPage %}
        <li class="page-item {% if currentPage == i %} active {% endif %}"><a class="page-link"
            href="/categoryManager?page={{ i }}">{{ i }}</a></li>
        {% endfor %}
        <li class="page-item {% if currentPage == AllPage %} disabled {% endif %}">
          <a class="page-link" href="/categoryManager?page={{ currentPage + 1 }}">Suivante</a>
        </li>
      </ul>
    </nav>

    <div>{{AllCategoryCounter}} catégories</div>
  </div>

</div>

{% include "/backend/admin/category/categoryAdd.html.twig" %}
{% include "/backend/admin/delete.html.twig" %}
{% endif %}

{% endblock %}